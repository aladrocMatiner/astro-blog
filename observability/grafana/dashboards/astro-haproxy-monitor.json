    {
      "datasource": "Prometheus",
      "description": "CPU (seconds per second) for the Astro container",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "targets": [
        {
          "expr": "100 * rate(container_cpu_usage_seconds_total{container=\"astro-blog-astro\"}[1m])",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ],
      "title": "Astro CPU (%)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Memory usage in bytes for Astro container",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 157286400
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container=\"astro-blog-astro\"}",
          "legendFormat": "{{container}}",
          "refId": "B"
        }
      ],
      "title": "Astro Memory",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
